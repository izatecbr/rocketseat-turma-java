<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
        <!-- Exibe TRACE para uma classe específica -->
        <Logger name="rocketseat.reader" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- xibe TRACE para uma classe específica -->
        <Logger name="rocketseat.writer.MyWriter" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
